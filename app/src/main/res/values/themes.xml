<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTreasuryBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_default</item>
    </style>

    <style name="Theme.MyTreasuryBank" parent="Base.Theme.MyTreasuryBank" />


    <!--    Style for Button Sign In-->
    <style name="ButtonStyleSignIn" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_width">358dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="EditTextStyleSignIn" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/edit_text</item>
    </style>
