<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTreasuryBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/color_default</item>
    </style>

    <style name="Theme.MyTreasuryBank" parent="Base.Theme.MyTreasuryBank" />


    <!--    Style for Button Sign In-->
    <style name="ButtonStyleSignIn" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="android:layout_width">358dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="EditTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">@color/text_color_default</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">@color/text_color_default</item>
    </style>

    <style name="HintTextStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="hintTextColor">@color/black</item>

        <item name="boxStrokeErrorColor">@color/boxStrokeColor_error</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="ProgressCircularStyle" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginVertical">10dp</item>
        <item name="android:indeterminateTint">@color/text_color_default</item>

    </style>
</resources>

