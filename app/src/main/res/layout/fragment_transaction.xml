<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.transaction.TransactionFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/background_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="22dp"
            android:fontFamily="@font/inter_semibold"
            android:textColor="@color/white"
            android:text="Adicionar transação" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="358dp"
        android:layout_height="550dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/bg_new_transaction"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButtonToggleGroup

            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_income"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/color_selected"
                android:text="receitas"
                android:textColor="@color/color_text_button_selected" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_expenses"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@color/color_unselected"
                android:text="Despesas"

                android:textColor="@color/color_text_button_selected" />


        </com.google.android.material.button.MaterialButtonToggleGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_value"
            style="@style/EditTextNewTransactionStyle"

            android:layout_marginTop="65dp"
            android:hint="VALOR"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/boxStrokeColor_error"
            app:endIconDrawable="@drawable/ic_like"
            app:endIconMode="custom"
            app:endIconTint="@color/color_edit_new_transaction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:startIconDrawable="@drawable/ic_money"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                tools:text="48.00" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Espaçamento entre os campos -->
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@id/input_value" />

        <!-- Campo de Descrição (Description) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_description"
            style="@style/TextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DESCRIÇÃO"
            app:helperTextEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/view">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                tools:text="pagamento energia" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_category"
            style="@style/EditTextNewTransactionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="CATEGORIA"
            app:helperTextEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/input_description">

            <AutoCompleteTextView
                android:id="@+id/select_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="none"
                android:paddingStart="10dp"
                tools:text="selecione a categoria" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--        definir o tipo de escolha da categoria, -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_date"
            style="@style/EditTextNewTransactionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="DATA"
            app:endIconDrawable="@drawable/ic_calend"
            app:endIconMode="custom"
            app:endIconTint="@color/color_edit_new_transaction"
            app:helperTextEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/input_category">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                tools:text="terça, 14 de junho de 2023" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_new_transaction"
            style="@style/ButtonStyleSignIn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Nova Transação"
            app:backgroundTint="@drawable/bg_button"
            app:layout_constraintBottom_toTopOf="@+id/progress_circular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/progress_circular"
            style="@style/ProgressCircularStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>